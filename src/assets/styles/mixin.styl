$borderBlack = #0b0c10
$LineBlack = #6a6b6f
$gradienBlacktLight = #454545
$gradientBlackDark = #2d2d2d
$gradienDarkBlacktLight = #37383a
$gradientDarkBlackDark = #29292b
$bgBlackLight = #353638
$bgBlackDark = #2b2b2d

$borderWhite = #b7b7b7
$LineWhite = #ffffff
$gradientWhiteLight = #f7f7f7
$gradientWhiteDark = #eaeaec
$bgWhiteLight = #ffffff
$bgWhiteDark = #fafafa

$colorMain = #009DFF
$colorMainDark = #007BC7
$colorMainLight = #36B2FF

bg-image($url) // 背景图片
  background-image url($url)

btn-black() // 黑色按钮
  border 1px solid #08080a
  border-radius 2px
  color #FFFFFF
  padding 5px 20px
  background linear-gradient($gradienBlacktLight, $gradientBlackDark)
  box-shadow 0 1px 0 $LineBlack inset
  outline none
  &:hover
    box-shadow 0 0px 2px #FFF inset
leftMenu1() //弹框左侧菜单黑色样式
  width 240px
  height 100%
  border-right 1px solid #ccc
  background #f5f5f5
  color #666
  flex none
  overflow-y auto
  .left-menu
    padding 10px 0
    li
      line-height 50px
      text-indent 50px
      user-select none
      border-right 4px solid transparent
      &.this
        background #d7eaf6
        border-right-color $colorMain
        &:hover
          background #d7eaf6
      &:hover
        background #e6e6e6
body-right() // 弹窗右侧白色样式
  .body-right
    height 100%
    background #FFF
    overflow auto
    flex auto
    display flex
    flex-direction column
    .content-menu
      min-height 30px
      padding 10px
      background #f8f8f8
      border-bottom 1px solid #ebeef5
      flex none
      display flex
      flex-direction row
      justify-content space-between
    .content-container
      flex auto
      overflow auto
      display flex
      flex-direction column
      .content
        flex auto
        display flex
        flex-direction column
empty()
  .empty
    width 100%
    text-align center
// 滚动条样式
::-webkit-scrollbar
  width 10px
  height 10px
::-webkit-scrollbar-button:vertical
  display none
::-webkit-scrollbar-track,
::-webkit-scrollbar-corner
  background-color #e2e2e2
::-webkit-scrollbar-thumb
  border-radius 0
  background-color rgba(0, 0, 0, .3)
  &:vertical:hover
    background-color rgba(0, 0, 0, .35)
  &:vertical:active
    background-color: rgba(0, 0, 0, .38)

